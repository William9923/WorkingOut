<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Base.Theme.MyApp" parent="Base.Theme.App">
        <item name="colorPrimary">@color/blueGrayDark</item>
        <item name="colorPrimaryVariant">@color/blueGrayDarkVariant</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/greenVariant</item>
        <item name="android:colorBackground">@color/blueGrayDark</item>
        <item name="colorSurface">@color/blueGrayDark</item>
        <item name="colorError">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
    </style>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="textAppearanceHeadline4">
            @style/TextAppearance.MaterialComponents.Headline4.Custom
        </item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline4.Custom" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">30sp</item>
    </style>

    <!--<style name="TextAppearance.MaterialComponents.Headline5.Custom" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
    </style>-->

    <style name="TextAppearance.MaterialComponents.Headline6.Custom" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="DaysTextViewStyle">
        <item name="android:textColor">@color/days_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/track_selector</item>
        <item name="switchMinWidth">50dp</item>
        <item name="android:switchMinWidth">50dp</item>
    </style>

    <style name="AlarmMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/base_grid_size</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/doub_grid_size</item>
        <item name="cornerSizeTopLeft">@dimen/doub_grid_size</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/theme_selector</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="CustomExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:gravity">center</item>
        <item name="iconSize">30dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="CheckableCustomExtendedFab" parent="CustomExtendedFab">
        <item name="android:checkable">true</item>
        <item name="backgroundTint">@color/theme_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/blueGrayDarker</item>
        <item name="android:textColorSecondary">@color/blueGrayDark</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextView" parent="">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Headline6.Custom
        </item>
    </style>

    <style name="SubtitleTextView" parent="">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="MusicCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MusicTitleTextView" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MusicSubTitleTextView" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

<!--    <style name="ArtistImageView" parent="">-->
<!--        <item name="cornerFamily">rounded</item>-->
<!--        <item name="cornerSize">@dimen/artist_image_view_round_size</item>-->
<!--        <item name="android:layout_width">@dimen/artist_image_view_size</item>-->
<!--        <item name="android:layout_height">@dimen/artist_image_view_size</item>-->
<!--    </style>-->

    <style name="HeaderBackgroundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/doub_grid_size</item>
        <item name="cornerSizeTopRight">@dimen/doub_grid_size</item>
    </style>

    <style name="MyDialogAnimation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="PreferenceSectionTextView" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceSectionExplanationTextView" parent="">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="PreferenceSectionActionTextView" parent="">
        <item name="android:textColor">@color/green</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>



</resources>