<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
                type="com.softhouse.workingout.data.NewsItem"
                name="data" />
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/lightBlue"
            android:layout_marginBottom="18dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="28dp"
            android:layout_height="wrap_content">

        <FrameLayout
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Media -->
            <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:scaleType="centerCrop"
                    app:loadImage='@{data.imageURL}'
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                        android:id="@+id/title_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:text='@{data.title.substring(0,10) + "..."}'
                        />

                <TextView
                        android:id="@+id/subtitle_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text='@{data.title.substring(10) + "..."}'
                        />

                <TextView
                        android:id="@+id/content_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text='@{data.desc.substring(0, 20) + "..."}'
                        />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>


