<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.softhouse.workingout">

<!--    Permission for internet-->
    <uses-permission android:name="android.permission.INTERNET"/>

<!--    Permission for sensor driver usage in the application-->
    <uses-permission android:name="com.google.android.things.permission.MANAGE_SENSOR_DRIVERS"/>

<!--    Permission for foreground service permission (for notification, etc)-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

<!--    Permission for step counter-->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".service.CompassService"/>
        <service android:name=".service.StepDetectorService"/>
        <receiver android:name=".service.StopNotificationListener"/>
        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>